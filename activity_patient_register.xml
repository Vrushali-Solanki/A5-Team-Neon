<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientRegisterActivity">



    <EditText
        android:id="@+id/pt_p_reg_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_text"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint=" Parent Full Name"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/pt_c_reg_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pt_p_reg_name"
        android:background="@drawable/circle_text"
        android:layout_marginTop="5dp"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint=" Ward Full Name"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/pt_reg_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pt_c_reg_name"
        android:background="@drawable/circle_text"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:hint="Phone Number"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        />


    <EditText
        android:id="@+id/pt_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_text"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/pt_reg_phone_number"
        android:hint="Ward Birth date"
        android:inputType="date"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/c_blood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_text"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/pt_birth"
        android:layout_marginRight="15dp"
        android:hint="Blood Group"
        android:inputType="text"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/pt_reg_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c_blood"
        android:background="@drawable/circle_text"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:hint="Password"
        android:inputType="text"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        />


    <EditText
        android:id="@+id/pt_reg_conf_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pt_reg_pass"
        android:background="@drawable/circle_text"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="6dp"
        android:hint=" Confirm Password"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/pt_reg_tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an account?Login here"
        android:textColor="@android:color/black"
        android:layout_marginTop="18dp"
        android:layout_below="@id/pt_reg_conf_pass"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/pt_reg_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pt_reg_conf_pass"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/circle_button"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Create an Account"
        android:textColor="@android:color/background_light"
        />



</RelativeLayout>